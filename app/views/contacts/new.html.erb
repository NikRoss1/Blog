<h1>Contact us</h1>

<%= form_for :contact, url: contacts_path, data: {turbo:false} do |f| %>

  <% if @contact && @contact.errors.any? %>

  <p>
    <ul>
      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </p>
  <% end %>

  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :massage %><br /> <!--#изменить букву-->
    <%= f.text_area :massage %>
  </p>

  <p>
    <%= f.submit 'Send message' %>
  </p>

<% end %>