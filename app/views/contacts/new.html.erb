<h1>Contact us</h1>

<%= form_for :contact, url: contacts_path, data: {turbo:false} do |f| %>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :massage %><br /> <!--#изменить букву-->
    <%= f.text_area :massage %>
  </p>

  <p>
    <%= f.submit 'Send message' %>
  </p>

<% end %>